# bv.clientb WSGI CONFIGURATION FILE
[DEFAULT]
debug=${settings:debug}

[composite:main]
use=egg:Paste#urlmap
/media/=pmedia
/admin/media/=padminmedia
/=pmain
/threads/=watch_threads

